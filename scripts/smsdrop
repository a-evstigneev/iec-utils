#!/bin/sh

. $IECDIR/iecenv # DB_ACT, DB_ARCH
. $IECDIR/io_utils
. $IECDIR/sms_utils
. $IECDIR/sms_parsers

dev=$1; comaddr=$2; dcs=$3; scts=$4; sms=$5

timestamp=$(gettimestamp "$scts")
sms=$(smsdecode "$dcs" "$sms")

archdir="$DB_ARCH/$comaddr"
[ -d "$archdir" ] || mkdir -p "$archdir"

tempfile="$archdir/tempfile"
[ -f "$tempfile" ] && rm "$tempfile" 2>/dev/null 

case "$dev" in
	ccu825)
		iecvalue=$(/usr/bin/printf '%s\n' "$sms" | readvalue_ccu825 "$comaddr" "$timestamp")
	;;
	granit)
		iecvalue=$(/usr/bin/printf '%s\n' "$sms" | readvalue_granit "$comaddr" "$timestamp")
	;;
	verset)
		iecvalue=$(/usr/bin/printf '%s\n' "$sms" | readvalue_verset "$comaddr" "$timestamp")
	;;
esac

case $? in
	0)
		cat - >> "$tempfile" <<-EOF
			$iecvalue
		EOF
		
		if sync "$tempfile"; then
			# Create files that will store the signal values for a general interrogation
			while read t_comaddr t_objaddr t_type t_value t_qds t_timestamp; do
				case "$t_type" in
					30)
						t_type=1
					;;
					36)
						t_type=13
					;;
				esac
				
				[ -d $DB_ACT/$t_comaddr/$t_type ] || mkdir -p $DB_ACT/$t_comaddr/$t_type
				echo $t_value $t_qds > $DB_ACT/$t_comaddr/$t_type/$t_objaddr
				sync $DB_ACT/$t_comaddr/$t_type/$t_objaddr
			done < "$tempfile"
		else
			exit 1
		fi
	;;
	2)
		exit 2
	;;
esac

exit 0
