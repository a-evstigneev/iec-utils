#!/bin/sh

. $IECDIR/config/iecenv

tmpfile=$(mktemp -p $RUNDIR childpids.XXXXXX)

####sigterm()
####{
####	local pid
####	trap '' TERM CHLD

####	jobs -p >$tmpfile
####	while read pid; do
####		kill -s TERM $pid >/dev/null 2>&1
####	done <<-EOF
####		$(cat $tmpfile)
####	EOF

####	trap '-' TERM
####}

####trap 'sigterm' TERM

while read asduaddr credentials dev description; do
	ccuserver_poll "$asduaddr" 2>>"$LOGDIR/poll_http/rtu_$asduaddr" &
done <<-EOF
	$(cat "$RTU" | grep ccu825_gprs)
EOF

wait
